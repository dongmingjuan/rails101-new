<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>Creator </td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, admin_group_path(group)) %></td>
          <td><%= group.description %></td>
          <td> <%= group.user.email %> </td>

          <td>
             <%= link_to("Edit", edit_admin_group_path(group), class: "btn btn-sm btn-default")%>
             <%= link_to("Delete", admin_group_path(group),    class: "btn btn-sm btn-default",
                         method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
